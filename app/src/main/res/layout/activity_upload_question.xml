<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.ac.sogang.cs.hello.UploadQuestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBackButton"
            android:text="back"
            android:layout_marginLeft="10dp"
            android:background="#33FAE041"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/upload1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모의고사에서 틀린 문제를 입력하세요"
            android:textSize = "20dp"
            android:textStyle = "bold"
            android:textColor = "#493E77"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <RadioGroup
            android:id="@+id/moigosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <RadioButton
                android:id="@+id/march"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3월"/>
            <RadioButton
                android:id="@+id/april"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4월"/>
            <RadioButton
                android:id="@+id/june"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6월"/>
            <RadioButton
                android:id="@+id/july"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7월"/>
            <RadioButton
                android:id="@+id/september"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9월"/>
            <RadioButton
                android:id="@+id/october"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10월"/>
        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <CheckBox
                android:id="@+id/rq1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="25dp"
                android:layout_marginRight="5dp"/>
            <CheckBox
                android:id="@+id/rq2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="25dp"
                android:layout_marginRight="5dp"/>
            <CheckBox
                android:id="@+id/rq3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="25dp"
                android:layout_marginRight="5dp"/>
            <CheckBox
                android:id="@+id/rq4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="25dp"
                android:layout_marginRight="5dp"/>
            <CheckBox
                android:id="@+id/rq5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="25dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp">
            <CheckBox
                android:id="@+id/rq6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="25dp"
                android:layout_marginRight="5dp"/>
            <CheckBox
                android:id="@+id/rq7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="25dp"
                android:layout_marginRight="5dp"/>
            <CheckBox
                android:id="@+id/rq8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="25dp"
                android:layout_marginRight="5dp"/>
            <CheckBox
                android:id="@+id/rq9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="25dp"
                android:layout_marginRight="5dp"/>
            <CheckBox
                android:id="@+id/rq10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="25dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/uploadsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:layout_gravity="center"
            android:onClick="onUpload"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>