<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/scoring_low"
    tools:context="kr.ac.sogang.cs.hello.ScoringActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/el_time"
        android:text="0:00"
        android:textColor="#6BC8BF"
        android:textSize="20dp"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score11"
        android:text="O"
        android:textSize="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="53dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score12"
        android:text="O"
        android:textSize="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="11dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score13"
        android:text="O"
        android:textSize="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score14"
        android:text="O"
        android:textSize="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="14dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score15"
        android:text="O"
        android:textSize="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="14dp"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:onClick="sendToWrongNote"
        android:alpha="0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="20dp">
        <Button
            android:layout_width="100dp"
            android:layout_height="52dp"
            android:layout_marginRight="20dp"
            android:onClick="moreQuestion"
            android:alpha="0"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="52dp"
            android:layout_marginLeft="12dp"
            android:onClick="onBackButton"
            android:alpha="0"/>
    </LinearLayout>

</LinearLayout>
